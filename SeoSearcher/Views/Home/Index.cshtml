@model SeoSearcher.Models.SeoSearch
@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h1 class="">
                SeoSearcher
            </h1>
            <a href="@Url.Action("Index", "SeoSearch")" class="btn btn-primary btn-lg">
                @*@Html.ActionLink("Favourite", "SeoSearch", "SeoSearch")"*@
                Run favorite Seo Search
                &raquo;
            </a>
        </div>
        <div class="col-md-6">

        </div>


    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-inline">
                <h4>Perform new SEO Search</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.KeyWords, htmlAttributes: new { @class = "control-label " })
                    <div class="">
                        @Html.EditorFor(model => model.KeyWords, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KeyWords, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="targetUrl" class="control-label">Target URL</label>
                    @*@Html.LabelFor(model => model.TargetUrl, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="" id="targetUrl">
                        @Html.EditorFor(model => model.TargetUrl, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TargetUrl, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*<div class="form-group">
                        @Html.LabelFor(model => model.DateRun, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DateRun, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DateRun, "", new { @class = "text-danger" })
                        </div>
                    </div>*@

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>